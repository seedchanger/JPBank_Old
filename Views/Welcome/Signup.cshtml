@{
    ViewData["Title"] = "Signup | JP Bank";
    Layout = "~/Views/Shared/WelcomeLayout.cshtml";
}
@model JPBank.Models.Entities.SignupEntity

<div class="container col-xl-10 col-xxl-11 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-5 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Future of banking</h1>
        </div>
        <div class="col-md-10 mx-auto col-lg-6">
            <form asp-action="Signup" method="post" class="p-4 p-md-5 border rounded-3 bg-body-tertiary">
                <div asp-validation-summary="All" /> @*For diplaying all validations messages *@
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="Name" class="form-control" id="txtName" placeholder="John Doe">
                            <label for="txtName">Full Name</label>
                            <span asp-validation-for="Name"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="email" asp-for="Email" class="form-control" id="txtEmail" placeholder="name@example.com">
                            <label for="txtEmail">Email address</label>
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" asp-for="Password" class="form-control" id="txtPassword" placeholder="Password">
                    <label for="txtPassword">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="txtConfirmPw" placeholder="Password">
                    <label for="txtConfirmPw">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Create Account</button>
                    </div>
                    <div class="col-md-6">
                        <a class="w-100 btn btn-lg btn-outline-secondary" asp-action="Index" asp-controller="Welcome">Cancel</a>
                    </div>
                </div>
                <hr class="my-4">
                <small class="text-body-secondary">have an account? <a asp-action="Login" asp-controller="Welcome">Login</a> here</small>
            </form>
        </div>
    </div>
</div>
